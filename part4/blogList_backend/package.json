{
    "name": "phonebook_backend",
    "version": "1.0.0",
    "description": "Backend to phonebook in part 2",
    "main": "index.js",
    "scripts": {
        "start": "NODE_ENV=production node index.js",
        "dev": "NODE_ENV=development nodemon index.js",
        "build:ui": "rm -rf build && cd ../phonebook_frontend && npm run build && cp -r build ../phonebook_backend",
        "deploy": "git subtree push --prefix part3/phonebook_backend heroku master",
        "lint": "eslint .",
        "test:blogs": "NODE_ENV=test jest ./tests/blog_api.test.js --verbose --runInBand",
        "test:users": "NODE_ENV=test jest ./tests/user_api.test.js --verbose --runInBand",
        "test:client": "NODE_ENV=test jest ./tests/client.test.js --verbose --runInBand"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "bcrypt": "^5.0.0",
        "express": "^4.17.1",
        "express-async-errors": "^3.1.1",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.10.6",
        "mongoose-unique-validator": "^2.0.3",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "dotenv": "^8.2.0",
        "eslint": "^7.9.0",
        "jest": "^26.4.2",
        "nodemon": "^2.0.4",
        "supertest": "^5.0.0"
    },
    "jest": {
        "testEnvironment": "node"
    }
}
